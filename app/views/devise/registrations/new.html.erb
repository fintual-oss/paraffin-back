
<div class="flex-container">
  <div class="form-container"> 

    <h2 class="text-title">Sign Up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :email, class:"text-label" %><br />
        <%= f.email_field :email, autocomplete: "email", class:"input-form" %>
      </div>

      <div>
        <%= f.label :password, class:"text-label" %><br />
        <%= f.password_field :password, autocomplete: "new-password", class:"input-form" %>
      </div>

      <div>
        <%= f.label :password_confirmation, class:"text-label" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"input-form" %>
      </div>

      <div class="devise-action-button">
        <%= f.submit "Crear cuenta" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>


