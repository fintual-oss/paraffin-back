<div class="flex-container">
  <div class="form-container"> 
    <h2 class="text-title">Inicio de sesiÃ³n ðŸŽ®</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div >
        <%= f.label :email, class:"text-label" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control input-form" %>
      </div>

      <div >
        <%= f.label :password, class:"text-label" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class:"form-control input-form"  %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div >
          <%= f.check_box :remember_me, class:"text-label" %>
          <%= f.label :remember_me, class:"form-check-label" %>
        </div>
      <% end %>

        <%= f.submit "Ingresar a mi cuenta", class:"devise-action-button" %>

    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

<style>

  .flex-container {
    height: 100%;
    margin-top: 100px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .form-container {
    flex-direction: column;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #eaf4ff;
    width: 600px;
    border-radius: 15px;
    font-family:'Trebuchet MS';
    border-color: #a1bae3;
    border-width: 2px;
    box-shadow: rgba(0, 0, 0, .3) 0 5px 15px;
    box-sizing: border-box;
    user-select: none;
    -webkit-user-select: none;
    touch-action: manipulation;
  }

  .text-title {
    margin-top: 30px;
    margin-bottom: 40px;
    font-weight: bold;
    font-size: 2.2em;
  }

  .text-label {
    margin: 10px;
    font-size: 0.9em;
  }

  .input-form {
    margin:5px;
    margin-bottom: 10px;
    width: 250px;
    background-color: #ffffff;
    border-radius: 8px;
    padding: 8px;
    color:#001a3a;
    border: none;
  }

  .input-form:focus {
    border-width: 2px;
    border-color: #4285f4;
  }

  .devise-action-button {
    background-image: linear-gradient(#0dccea, #0d70ea);
