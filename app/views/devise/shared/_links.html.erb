<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name), class:"link" %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= form_for "Login with Google",
        url: omniauth_authorize_path(resource_name, provider), 
        method: :post,
        class:"form",
        data: {turbo: "false"} do |f| %>
          <%= f.submit type: "image", src: url_for("/assets/btn_google_dark_normal_ios.svg"), class:"google-icon"%>
          <%= f.submit "Sign in with Google", class:"google-text"%>
    <% end %>
  <% end %>
<% end %>


<%- if controller_name != 'sessions' %>
  <%= link_to "Ingresar con email", new_session_path(resource_name), class:"devise-link-button" %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Crear una cuenta", new_registration_path(resource_name), class:"devise-link-button" %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end %>


<style>

  .devise-link-button {
    margin-top:10px;
    margin-bottom: 40px;
    background-color: #0D4899;
    text-decoration:none;
