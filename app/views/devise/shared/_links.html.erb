<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name), class:"link" %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= form_for "Login with #{provider}",
        url: omniauth_authorize_path(resource_name, provider), 
        method: :post,
        class:"#{provider}" == "google_oauth2" ? "google-form" : "github-form",
        data: {turbo: "false"} do |f| %>
          <%= f.submit type: "image", src: url_for("#{provider}" == "google_oauth2" ? "/assets/btn_google.svg" : "/assets/btn_github.png"),
            class:"#{provider}" == "google_oauth2" ? "google-icon" : "github-icon"%>
          <%= f.submit  "Sign in with #{"#{provider}" == "google_oauth2" ? "Google" : "GitHub" }",
            class:"#{provider}" == "google_oauth2" ? "google-text" : "github-text"%>
    <% end %>
  <% end %>
<% end %>

<%- if controller_name != 'sessions' %>
  <%= link_to "Ingresar con email", new_session_path(resource_name), class:"devise-link-button" %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Crear una cuenta", new_registration_path(resource_name), class:"devise-link-button" %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end %>


